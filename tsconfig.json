{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./dist/types"
  },
  "exclude": ["webpack.config.js"],
  "include": ["src/**/*.ts",
    "src/types/index.ts"
  ]
}